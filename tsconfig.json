{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "lib": [
      "es2015.core",
      "es6",
      "dom"
    ]
  },
  "exclude": [
    "node_modules",
    "src/**/__tests__",
    "src/**/__fixtures__",
    "src/**/__mocks__"
  ]
}
