{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "module": "NodeNext",
    "declaration": true,
    "esModuleInterop": true,
    "allowJs": false,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "lib": ["ESNext", "DOM"],
    "rootDir": "src",
    "outDir": "build"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "**/__tests__",
    "**/__bench__",
    "node_modules",
    "**/*.tmp.ts",
    "build"
  ]
}
