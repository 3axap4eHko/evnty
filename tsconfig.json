{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "lib": [
      "es2015.core",
      "es6",
      "dom"
    ],
    "rootDir": "src",
    "outDir": "build"
  },
  "include": [
    "src/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/__tests__",
    "src/**/__fixtures__",
    "src/**/__mocks__"
  ]
}
